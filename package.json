  },
  "homepage": "https://github.com/RobertGordonUniversity/cm4025_assessment-Ruaidhri-MacKenzie#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "connect-mongodb-session": "^3.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^7.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0"
  },
