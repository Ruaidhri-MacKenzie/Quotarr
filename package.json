{
  "name": "cm4025_assessment-ruaidhri-mackenzie",
  "version": "1.0.0",
  "description": "Coursework assessment for CM4025",
  "main": "server.js",
  "type": "module",
  "scripts": {
		"database": "mongod --dbpath ./database",
		"server": "set NODE_ENV=development && nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run database\" \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix client",
    "start": "concurrently \"npm run database\" \"set NODE_ENV=production && node server.js\"",
		"setup": "npm install --prefix client && npm install && npm run build && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobertGordonUniversity/cm4025_assessment-Ruaidhri-MacKenzie.git"
